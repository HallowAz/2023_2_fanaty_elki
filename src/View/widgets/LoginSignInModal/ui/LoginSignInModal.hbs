<div class="modal">
    <div class="login-signin-form modal__box" id="login">
        <div id="login-page">
            <div class="login-signin-form__control">
                <img class="login-signin-form__control__back visibility-hidden" id="login-page__back"
                    src="img/ArrowBack.svg" alt="" srcset="">
                <img class="login-signin-form__control__close" id="login-page__close" src="img/Cross.svg" alt=""
                    srcset="">
            </div>
            <div class="login-signin-form__header">
                <img class="login-signin-form__header__logo" src="img/Принеси&Подай.svg" alt="Закрыть" srcset="">
                <div class="login-signin-form__header__title">Войдите, чтобы сделать заказ</div>
            </div>
            <form class="login-signin-form__form">
                <div class="login-signin-form__form__input-container">
                    <div class="login-signin-form__form__input-container__msg" id="login-page__msg"></div>
                    <div class="input-with-msg">
                        <div class="input-with-msg__msg_error"></div>
                        <input class="input-with-msg__input_default" type="text" name="username"
                            id="login-page__username" placeholder="имя пользователя" value="" autocomplete="username">
                    </div>
                    <div class="input-with-msg">
                        <div class="input-with-msg__msg_error"></div>
                        <input class="input-with-msg__input_default" type="password" name="password"
                            id="login-page__password" placeholder="пароль" value="" autocomplete="current-password">
                    </div>
                </div>
                <div class="login-signin-form__form__button-container">
                    <button class="button_primary" type="button" id="login-page__submit">Войти</button>
                    <button class="button_secondary" type="button" id="login-page__reg">Зарегистрироваться</button>
                </div>
            </form>
        </div>
        <div class="display-none" id="reg-user-page">
            <div class="login-signin-form__control">
                <img class="login-signin-form__control__back" id="reg-user-page__back" src="img/ArrowBack.svg" alt=""
                    srcset="">
                <img class="login-signin-form__control__close" id="reg-user-page__close" src="img/Cross.svg" alt=""
                    srcset="">
            </div>
            <div class="login-signin-form__header">
                <img class="login-signin-form__header__logo" src="img/Принеси&Подай.svg" alt="Закрыть" srcset="">
                <div class="login-signin-form__header__title">Создайте аккаунт</div>
            </div>
            <form class="login-signin-form__form">
                <div class="signup-form__form__input-container">
                    <div class="signup-form__form__input-container__msg" id="reg-user-page__msg"></div>
                    <div class="input-with-msg">
                        <div class="input-with-msg__msg_error" id="reg-user-page__email__msg"></div>
                        <input class="input-with-msg__input_default" type="email" name="email" id="reg-user-page__email"
                            placeholder="email" value="" autocomplete="email">
                    </div>
                    <div class="input-with-msg">
                        <div class="input-with-msg__msg_error" id="reg-user-page__username__msg"></div>
                        <input class="input-with-msg__input_default" type="text" name="username"
                            id="reg-user-page__username" placeholder="имя пользователя" value=""
                            autocomplete="username">
                    </div>
                    <div class="input-with-msg">
                        <div class="input-with-msg__msg_error" id="reg-user-page__password__msg"></div>
                        <input class="input-with-msg__input_default" type="password" name="password"
                            id="reg-user-page__password" placeholder="пароль" value="" autocomplete="password">
                    </div>
                    <div class="input-with-msg">
                        <div class="input-with-msg__msg_error" id="reg-user-page__passwordconfirm__msg"></div>
                        <input class="input-with-msg__input_default" type="password" name="passwordconfirm"
                            id="reg-user-page__passwordconfirm" placeholder="повторите пароль" value=""
                            autocomplete="password">
                    </div>
                </div>
                <div class="signup-form__form__button-container">
                    <button class="button_primary" type="button" id="reg-user-page__next">Далее</button>
                    <button class="button_secondary" type="button" id="reg-user-page__auth">Уже есть аккаунт?</button>
                </div>
            </form>
        </div>
        <div class="display-none" id="reg-extra-info-page">
            <div class="login-signin-form__control">
                <img class="login-signin-form__control__back" id="reg-extra-info-page__back" src="img/ArrowBack.svg"
                    alt="" srcset="">
                <img class="login-signin-form__control__close" id="reg-extra-info-page__close" src="img/Cross.svg"
                    alt="" srcset="">
            </div>
            <div class="login-signin-form__header">
                <img class="login-signin-form__header__logo" src="img/Принеси&Подай.svg" alt="Закрыть" srcset="">
                <div class="login-signin-form__header__title">Укажите дополнительную информацию</div>
            </div>
            <form class="login-signin-form__form">
                <div class="signup-form__form__input-container">
                    <div class="signup-form__form__input-container__msg" id="reg-extra-info-page__msg"></div>
                    <div class="input-with-msg">
                        <div class="input-with-msg__msg_error" id="reg-extra-info-page__birthday__msg"></div>
                        <input class="input-with-msg__input_default" type="date" name="birthday"
                            id="reg-extra-info-page__birthday" placeholder="Дата рождения" value="" autocomplete="bday">
                    </div>
                    <div class="input-with-msg">
                        <div class="input-with-msg__msg_error" id="reg-extra-info-page__phone-number__msg"></div>
                        <input class="input-with-msg__input_default" type="tel" name="phone-number"
                            id="reg-extra-info-page__phone-number" placeholder="Номер телефона" value=""
                            autocomplete="tel">
                    </div>
                </div>
                <div class="signup-form__form__button-container">
                    <button class="button_primary" type="button"
                        id="reg-extra-info-page__submit">Зарегистрироваться</button>
                    <button class="button_secondary" type="button" id="reg-extra-info-page__auth">Уже есть
                        аккаунт?</button>
                </div>
            </form>
        </div>
    </div>
</div>