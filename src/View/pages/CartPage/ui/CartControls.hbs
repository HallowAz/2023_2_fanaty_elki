<div class="cart__content__control__payment">
    <div class="cart__content__control__payment__address">
        <div class="cart__content__control__payment__address__label">Адрес доставки</div>
        <div class="cart__content__control__payment__address__input-control">
            <input type="text" name="cart__address" id="cart__address" placeholder="Укажите адрес доставки"
                class="cart__content__control__payment__address__input-control__input input-with-msg__input_default">
            <button type="button" class="cart__content__control__payment__address__input-control__button button_primary"
                id="cart__change-address">Изменить</button>
        </div>
    </div>
    <form class="payment-chooser" id="form">
        <h2 class="payment-chooser__title">Способ оплаты</h2>
        <div class="payment-chooser__courier-cash radio-chooser">
            <input class="radio-chooser__radio" type="radio" name="payment-type" id="courier-cash"
                value="courier-cash" />
            <label class="radio-chooser__label" for="courier-cash">Наличными
                курьеру</label>
        </div>
        <div class="payment-chooser__courier-card radio-chooser">
            <input class="radio-chooser__radio" type="radio" name="payment-type" id="courier-card"
                value="courier-card" />
            <label class="radio-chooser__label" for="courier-card">Картой
                курьеру</label>
        </div>
        <div class="payment-chooser__online-card">
            <div class="radio-chooser">
                <input class="radio-chooser__radio" type="radio" name="payment-type" id="online-card"
                    value="online-card" checked />
                <label class="radio-chooser__label" for="online-card">Картой
                    онлайн</label>
            </div>
            <div class="payment-chooser__online-card__card-data" id="card-payment">
                <input
                    class="payment-chooser__online-card__card-data__card-number input-with-msg__input_default input-transition"
                    type="text" name="card-nubmer" id="card-number" placeholder="Номер карты" pattern="\d{16,16}"
                    required />
                <div class="payment-chooser__online-card__card-valid-thru-cvv">
                    <input
                        class="payment-chooser__online-card__card-data__card-valid-thru input-with-msg__input_default input-transition"
                        type="text" name="card-valid-thru" id="card-valid-thru" placeholder="Срок действия ММ/ГГ"
                        pattern="\d{2,2}/\d{2,2}" required />
                    <input
                        class="payment-chooser__online-card__card-data__card-cvv input-with-msg__input_default input-transition"
                        type="password" name="card-cvv" id="card-cvv" placeholder="CVV" pattern="\d{3,3}" required />
                </div>
            </div>
        </div>
        <div class="cart__content__control__promo">
            <div class="cart__content__control__promo__input-control">
                <input type="text" name="promo" id="promo__value" placeholder="Промокод"
                    class="cart__content__control__promo__input-control__input input-with-msg__input_default">
                <button type="button" class="cart__content__control__promo__input-control__button button_primary"
                    id="promo__submit">Применить</button>
            </div>
        </div>
        <div class="cart__content__control__payment-approve">
            <h2 class="cart__content__control__payment-approve__sum" id="cart__sum">Сумма
                заказа:</h2>
            <h2 class="cart__content__control__payment-approve__delivery" id="cart__delivery">Сумма
                доставки:</h2>
            <div class="cart__content__control__payment-approve__error" id="cart__error"></div>
            <input class="cart__content__control__payment-approve__approve button_primary-green" value="Оформить заказ"
                type="submit" />
        </div>
    </form>
</div>