<div class="profile-info">
    <div class="profile-info__header">
        <img class="profile-info__header__image" src="{{ Icon }}" alt="" srcset="">
        <h1 class="profile-info__header__username">{{ Username }}</h1>
    </div>
    <div class="profile-info__control">
        <div class="profile-info__control__field">
            <h2 class="profile-info__control__field__name">Email</h2>
            <input class="profile-info__control__field__value" type="text" name="emai" id="email" value="{{ Email }}">
        </div>
        <div class="profile-info__control__field">
            <h2 class="profile-info__control__field__name">Дата рождения</h2>
            <input class="profile-info__control__field__value" type="text" name="birthday" id="birthday"
                value="{{ Birthday }}">
        </div>
    </div>
    <button class="button_primary-green" type="button">Сохранить</button>
</div>