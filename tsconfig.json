{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "outDir": "./dist/",
        "allowJs": true,
        "noEmitOnError": true,
        "declaration": true,
        "isolatedModules": true,
        "strictPropertyInitialization": false,
        "types": ["handlebars"],
    },
    "include": [
        "public/index.ts",
        "types/global.d.ts",
        "src/**/*.ts"
    ],
}
